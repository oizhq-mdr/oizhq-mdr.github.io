---
import IndexLayout from '@/layouts/IndexLayout.astro'
import { getEntry, render } from 'astro:content'
import { themeConfig } from '@/config'

const cvEntry = await getEntry('cv', 'cv')
const { Content } = cvEntry ? await render(cvEntry) : { Content: null }
---

<IndexLayout title={`CV - ${themeConfig.site.title}`} description={themeConfig.site.description}>
  <main>
    <div class="cv-page prose">
      {Content && <Content />}
    </div>
  </main>
</IndexLayout>

<style>
  .cv-page {
    max-width: 100%;
  }
</style>
