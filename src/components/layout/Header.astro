---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'

const currentPath = Astro.url.pathname
---

<header>
  <nav>
    <a href="/" class="site-title">{themeConfig.site.title}</a>
    <div class="nav-links">
      <a href="/publication/" class={currentPath === '/publication/' ? 'active' : ''}>Publication</a>
      <a href="/cv/" class={currentPath === '/cv/' ? 'active' : ''}>CV</a>
      <a href="/blog/" class={currentPath.startsWith('/blog') ? 'active' : ''}>Blog</a>
      <ThemeToggle />
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0 0 6rem 0;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .site-title {
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    text-decoration: none;
    min-width: 3rem;
    display: inline-block;
  }
  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .nav-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: opacity 0.15s ease-out;
    font-size: 0.95rem;
    font-weight: var(--font-weight-regular);
  }
  .nav-links a.active {
    color: var(--text-primary);
    font-weight: var(--font-weight-bold);
  }
  @media (hover: hover) and (pointer: fine) {
    .nav-links a:hover {
      opacity: 0.6;
    }
  }
</style>
