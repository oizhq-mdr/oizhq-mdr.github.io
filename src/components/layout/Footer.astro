---
import { themeConfig } from '@/config'
const today = new Date()
---

<footer>
  <div class="footer-content">
    <div class="copyright">
      &copy; {today.getFullYear()} {themeConfig.site.author}
    </div>
  </div>
</footer>
<style>
  footer {
    font-size: var(--font-size-s);
    font-weight: var(--font-weight-light);
    line-height: 1.75;
    color: var(--text-secondary);
    opacity: 0.75;
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }

  .copyright {
    white-space: nowrap;
  }
</style>
